<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginBottom="3dp">
    
    <View  android:id="@+id/view"
           android:layout_width="fill_parent"
           android:layout_height="1dp"
           android:layout_marginTop="5dp"
           android:background="@drawable/dividergray"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonreload"
        android:layout_alignBottom="@+id/buttonreload"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:textDirection="rtl"
        android:text="رقم الطلب :"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/red_divider" />

    <TextView
        android:id="@+id/textVieworderdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/button2"
        android:text="TextView"
        android:layout_marginRight="5dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textViewamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2orderid"
        android:layout_alignRight="@+id/button2"
        android:text="TextView"
        android:layout_marginRight="5dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/textViewstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2orderid"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/button2"
        android:layout_marginRight="5dp"
        android:text="TextView"
        android:textColor="#000" />

    <Button
        android:id="@+id/buttonreload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/textVieworderdate"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:background="@drawable/reorder_ar" />

    <TextView
        android:id="@+id/textView2orderid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/button2"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:text="djf"
        android:textColor="#ff0000"
        android:textSize="25dp"
        style="@style/autoscrollText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtStatusValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonreload"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textViewstatus"
        android:gravity="right"
        android:lines="1"
        style="@style/autoscrollText"
        android:text="TExt view"
        android:textDirection="rtl" />

</RelativeLayout>
