<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/border"
    android:rotationY="180">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageViewproductimag"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true" />

        <TableRow
            android:id="@+id/tableRowonclickview"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/transbg_withclose" >

            <Button android:id="@+id/buttondelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/delete_icon_wl_ar"/>
            
            <Button
                android:id="@+id/buttondetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:background="@drawable/details_wl_ar"/>
            
            <Button
                android:id="@+id/buttoncart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
				android:background="@drawable/addtocart_wl_ar"/>            
            
        </TableRow>

    </RelativeLayout>
   <View android:id="@+id/hfsf"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#eaeaea"/>
    
          <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:orientation="vertical"
		        android:layout_marginTop="5dp"
		        android:gravity="center_horizontal" >

     
          <TextView
                  android:id="@+id/textViewproductname"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="7dp"
                  android:layout_marginRight="7dp"
                  android:layout_marginTop="8dp"
                  android:gravity="right"
                  android:text="TextView"
                  style="@style/autoscrollText"
                  android:textColor="#000"
                  android:typeface="serif"
                  android:textSize="18sp" />

      <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10sp" >
            
          	  <TextView
                  android:id="@+id/textVieworgprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentLeft="true"
                  android:text="dk"
                  android:gravity="right"
                  android:layout_marginRight="7dp"
                  android:textStyle="bold"
                  android:textColor="#5e5e5e"
                  android:typeface="serif"
                  android:textSize="16sp" />

              <TextView
                  android:id="@+id/textViewofferprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:text="TextView"
                  android:gravity="right"
                  android:textSize="16sp"
                  android:typeface="serif"
                  android:textStyle="bold"
                  android:layout_marginRight="7dp"
                  android:layout_marginBottom="12dp"
                  android:textColor="#ff0000" />

          </RelativeLayout>
          </LinearLayout>
        

</LinearLayout>
