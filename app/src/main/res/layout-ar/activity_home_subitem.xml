<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:rotationY="180" 
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageViewproductimag"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_img" />

       <TableRow
            android:id="@+id/tableRowonclickview"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/transbg_withclose" >

            

            <Button
                android:id="@+id/buttondetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/searchicon_ar"/>
            
            <Button
                android:id="@+id/buttoncart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  
                android:layout_marginLeft="20sp"
				android:background="@drawable/addtocharticon_ar"/>
        </TableRow>
<TextView
            android:id="@+id/textView_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#90FFFFFF"
            android:padding="3dp"
            android:gravity="center"
            android:text="غير متوفر حالياً"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_dark" />
    </RelativeLayout>
   
          <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:orientation="vertical"
		        android:gravity="center_horizontal" 
		        android:background="@drawable/border">

              <TextView
                  android:id="@+id/textViewproductname"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="7dp"
                  android:layout_marginRight="7dp"
                  android:gravity="right"
                  android:textDirection="rtl"
                  android:layout_marginTop="8dp"
                  style="@style/autoscrollText"
                  android:text="TextView"
                  android:typeface="serif"
                  android:textColor="#000"
                  android:textSize="17sp" />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10sp" >


              <TextView
                  android:id="@+id/textVieworgprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="3dp"
                  android:layout_alignParentLeft="true"
                  android:textColor="#5e5e5e"
                  android:gravity="right"                  
                  android:textSize="14sp" />
              
              
              <TextView
                  android:id="@+id/textViewofferprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:text="TextView"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:typeface="serif"
                  android:layout_marginRight="7dp"
                  android:layout_marginBottom="8dp"
                  android:paddingBottom="5dp"
                  android:textColor="#ff0000"
                   />

          </RelativeLayout>
          </LinearLayout>
        

</LinearLayout>
