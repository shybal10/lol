    <ImageView
        android:id="@+id/imageViewtopheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/paperplane_ar"
        android:scaleType="fitStart"/>

    
    <ScrollView android:id="@+id/scroll"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/linlay"
            android:layout_width="fill_parent"
            android:layout_height="244dp"
            android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1emailnewsletter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:inputType="textEmailAddress"
        android:hint="@string/emailsignup"
        android:padding="10dp"
         android:textDirection="rtl"
        android:gravity="right|center_vertical"
        android:background="@drawable/edittext_small" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#f6f7f9"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonsubmitnewsletter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/subscribe_ar"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    </TableRow>
    </RelativeLayout>
    </ScrollView>

</LinearLayout>
