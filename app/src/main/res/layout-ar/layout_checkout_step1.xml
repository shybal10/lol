    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewtopheader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/checkout_heading1"
                android:scaleType="fitStart"
                />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/defaultSel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:textDirection="rtl"
                    android:button="@drawable/custom_radio_button"
                    android:checked="true"
                    android:text="حسابي"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textDirection="rtl"
                    android:button="@drawable/custom_radio_button"
                    android:text="عنوان جديد"
                    android:textColor="#000000" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutdefault"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#b7babf" />
                     
                        
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <Spinner
                        android:id="@+id/addressspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/spinnerbg_ar"
                        android:gravity="center_vertical|right"
                        android:paddingLeft="7dp"
                        android:textDirection="rtl"
                         />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labeTextnamefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:textDirection="rtl"
                        android:gravity="right"
                        android:hint="@string/firstname"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextLastname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:textDirection="rtl"
                        android:gravity="right"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/lastname"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextaddressfn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:gravity="right"
                        android:focusable="false"
                        android:hint="@string/address1"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextpostcodefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:textDirection="rtl"
                        android:gravity="right"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/mobilenumber"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextcountry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:textDirection="rtl"
                        android:gravity="right"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="country"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextcountryZone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:textDirection="rtl"
                        android:gravity="right"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Zone"
                        android:padding="10dp" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCustom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/delivery_details"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#b7babf" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextnamefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:inputType="textPersonName"
                        android:digits="@string/charecters"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/firstname"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowemail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextLastname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:inputType="textPersonName"
                        android:digits="@string/charecters"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/lastname"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowteleAdrress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextaddressfn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/address1"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowteleAdrress1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextaddress2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/address2_opt"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowtelepn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextpostcodefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:maxLength="13"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/mobilenumber"
                        android:gravity="right"
                        android:inputType="phone"
                        android:padding="10dp" />
                </TableRow>

                
                <Spinner
                    android:id="@+id/spinnercountryfn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinnerbg_ar"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="7dp"
                    android:prompt="@string/promptcountry"
                    android:textDirection="rtl" />

                <Spinner
                    android:id="@+id/spinnerzonefn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinnerbg_ar"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="7dp"
                    android:prompt="@string/promptcity"
                    android:textDirection="rtl" />
            </LinearLayout>

            <TableRow
                android:id="@+id/tableRowsubmit"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:background="#F6F7F9"
                android:gravity="center" >

                <Button
                    android:id="@+id/buttonnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/continuation_btn" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</LinearLayout>