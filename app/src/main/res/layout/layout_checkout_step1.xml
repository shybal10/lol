<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tableRow1back"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/dairam_header2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonbackfnister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_arrow" />

        <TextView
            android:id="@+id/textViewbackcheckout"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/checkout"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textDirection="ltr"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonbackfnisterInvisble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/back_arrow"
            android:visibility="invisible" />
    </LinearLayout>

    <!--
    <TableRow
        android:id="@+id/tableRow1back"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/dairam_header2"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/buttonbackfnister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_arrow" />

        <TextView
            android:id="@+id/textViewbackcheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textSize="20sp" />
    </TableRow>
    -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewtopheader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/step1" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/defaultSel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:button="@drawable/custom_radio_button"
                    android:checked="true"
                    android:text=" My account"
                    android:textColor="#000000"
                    android:typeface="serif" />

                <RadioButton
                    android:id="@+id/custom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:button="@drawable/custom_radio_button"
                    android:text=" New address"
                    android:textColor="#000000"
                    android:typeface="serif" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutdefault"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#b7babf" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowSpinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <Spinner
                        android:id="@+id/addressspinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/spinner"
                        android:gravity="right|center_vertical"
                        android:paddingLeft="7dp"
                        android:textDirection="rtl" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labeTextnamefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/firstname"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextLastname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/lastname"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextaddressfn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/address1"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextpostcodefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="@string/mobilenumber"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextcountry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="country"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/labelTextcountryZone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edittext_small"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Zone"
                        android:padding="10dp"
                        android:typeface="serif" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCustom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="@string/delivery_details"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#b7babf" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextnamefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:digits="@string/charecters"
                        android:hint="@string/firstname"
                        android:inputType="textPersonName"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowemail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextLastname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:digits="@string/charecters"
                        android:hint="@string/lastname"
                        android:inputType="textPersonName"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowteleAdrress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextaddressfn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/address1"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowteleAdrress1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextaddress2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/address2_opt"
                        android:padding="10dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowtelepn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp" >

                    <EditText
                        android:id="@+id/edittextpostcodefn"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edittext_small"
                        android:hint="@string/mobilenumber"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="10dp" />
                </TableRow>

                <Spinner
                    android:id="@+id/spinnercountryfn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="7dp"
                    android:prompt="@string/promptcountry"
                    android:textDirection="rtl" />

                <Spinner
                    android:id="@+id/spinnerzonefn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/spinner"
                    android:gravity="right|center_vertical"
                    android:paddingLeft="7dp"
                    android:prompt="@string/promptcity"
                    android:textDirection="rtl" />
            </LinearLayout>

            <TableRow
                android:id="@+id/tableRowsubmit"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:background="#F6F7F9"
                android:gravity="center" >

                <Button
                    android:id="@+id/buttonnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/next_btn" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</LinearLayout>