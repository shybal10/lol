<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:weightSum="1"        
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewcarttotal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            android:text="Cart Subtotal :"
            android:textColor="#13161a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewcarttotalprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="0 KD"
            android:textColor="#13161a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:weightSum="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewspclpromo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="Special Promotions :"
            android:textColor="#13161a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewspclpromoprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="0 KD"
            android:textColor="#13161a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:weightSum="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textviewvoucher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="Voucher Amount :"
            android:textColor="#13161a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewvoucherprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="0 KD"
            android:textColor="#13161a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:weightSum="1"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Textviewshippingcharge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="Shipping Charge :"
            android:textColor="#13161a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewcartshipingprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="0 KD"
            android:textColor="#13161a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/Textviewcod"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:text="COD Charge :"
            android:textColor="#13161a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewcartcodprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="0 KD"
            android:textColor="#13161a"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/linlaywthscroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#dadbdc"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="ORDER TOTAL"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewtotalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="0 KD"
                    android:textColor="#13161a"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/buttonconfirmorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/confirmorder_btn" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>