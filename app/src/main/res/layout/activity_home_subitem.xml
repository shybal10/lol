<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center_horizontal"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageViewproductimag"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TableRow
            android:id="@+id/tableRowonclickview"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:background="@drawable/transbg_withclose" >

            <Button
                android:id="@+id/buttoncart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5dp" 
				android:background="@drawable/add_to_cart"/>

            <Button
                android:id="@+id/buttondetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:background="@drawable/details"/>
        </TableRow> 

        <TextView
            android:id="@+id/textView_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#90FFFFFF"
            android:padding="3dp"
            android:gravity="center"
            android:text="out of stock"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_dark" />

    </RelativeLayout>
    
          <View android:id="@+id/hfsf"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#eaeaea"/>

          <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:orientation="vertical"
		        android:gravity="center_horizontal" 
		        >

        
              
              <TextView
                  android:id="@+id/textViewproductname"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="7dp"
                  android:layout_marginRight="7dp"
                  android:layout_marginTop="8dp"
                  android:gravity="left"
                  android:text="TextView"
                  style="@style/autoscrollText"
                  android:textColor="#000"
                  android:typeface="serif"
                  android:textSize="18sp" />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10sp"
              android:gravity="center_vertical" >

              <TextView
                  android:id="@+id/textViewofferprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentTop="true"
                  android:text="TextView"
                  android:textSize="16sp"
                  android:typeface="serif"
                  android:textStyle="bold"
                  android:layout_marginLeft="7dp"
                  android:layout_marginBottom="12dp"
                  android:textColor="#ff0000"
                   />

              <TextView
                  android:id="@+id/textVieworgprice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBaseline="@+id/textView1"
                  android:layout_alignBottom="@+id/textView1"
                  android:layout_alignParentRight="true"
                  android:text="dk"
                  android:gravity="right|bottom"
                  android:layout_marginRight="7dp"
                  android:textStyle="bold"
                  android:textColor="#5e5e5e"
                  android:typeface="serif"
                  android:textSize="14sp" />
                  <!-- android:background="@drawable/grayline" -->					

          </RelativeLayout>
          </LinearLayout>
        

</LinearLayout>
